<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#2D65F1"
                android:text="Nama Pembeli:"
                android:textStyle="bold"
                android:textSize="28sp"
                android:layout_margin="10dp"/>

            <EditText
                android:id="@+id/txtNamaPembeli"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#2D65F1"
                android:text="Nama Barang:"
                android:textStyle="bold"
                android:textSize="28sp"
                android:layout_margin="10dp"/>

            <EditText
                android:id="@+id/txtNamaBarang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#2D65F1"
                android:text="Jumlah Beli:"
                android:textStyle="bold"
                android:textSize="28sp"
                android:layout_margin="10dp"/>

            <EditText
                android:id="@+id/txtJumlahBeli"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#2D65F1"
                android:text="Harga:Rp"
                android:textStyle="bold"
                android:textSize="28sp"
                android:layout_margin="10dp"/>

            <EditText
                android:id="@+id/txtHarga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#2D65F1"
                android:text="Uang Bayar:Rp"
                android:textStyle="bold"
                android:textSize="28sp"
                android:layout_margin="10dp"/>

            <EditText
                android:id="@+id/txtUangBayar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"/>

            <Button
                android:id="@+id/btnProses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#EF30F6"
                android:text="Proses"/>

            <TextView
                android:id="@+id/txtTotalBelanja"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#2D65F1"
                android:text="Total Belanja:"
                android:textStyle="bold"
                android:textSize="28sp"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/txtUangKembalian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#2D65F1"
                android:text="Uang Kembalian:"
                android:textStyle="bold"
                android:textSize="28sp"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/txtBonus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#2D65F1"
                android:text="Bonus:"
                android:textStyle="bold"
                android:textSize="28sp"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/txtKeterangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#2D65F1"
                android:text="Keterangan:"
                android:textStyle="bold"
                android:textSize="28sp"
                android:layout_margin="10dp"/>
            <Button
                android:id="@+id/btnReset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#EF30F6"
                android:text="Reset Data"/>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>